{% extends 'user_base_top_nav.html' %}

{% block title %}
    User Profile
{% endblock %}

{% block content %}
<div class="container mt-4">
    <div class="row">
        <!-- Profile Picture and User Info -->
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h4>{{ current_user.first_name }} {{ current_user.last_name }}</h4>
                    <p class="text-muted">{{ current_user.email }}</p>
                    <button class="btn btn-primary" id="editProfileBtn">
                        <i class="fas fa-edit"></i> Edit Profile (Coming Soon)
                    </button>
                </div>
            </div>
        </div>

        <!-- User Information -->
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5><i class="fas fa-user"></i> Profile Information</h5>
                </div>
                <div class="card-body row">
                    <div class="col-md-7">
                        <p><strong>User ID:</strong> {{ current_user.student_ID }}</p>
                        <p><strong>First Name:</strong> {{ current_user.first_name }}</p>
                        <p><strong>Last Name:</strong> {{ current_user.last_name }}</p>
                        <p><strong>Email:</strong> {{ current_user.email }}</p>
                        <p><strong>Department | Year | Section:</strong> 
                            {{ current_user.department.department_name }} | 
                            {{ current_user.department.year }} | 
                            {{ current_user.department.section }}
                        </p>
                        <p><strong>Password:</strong> ******** 
                            <button class="btn btn-sm btn-outline-secondary" id="changePasswordBtn">
                                Change (Coming Soon)
                            </button>
                        </p>
                    </div>
                    <!-- QR Code Display -->
                    <div class="col-md-3 text-center">
                        <h5>QR Code</h5>
                        <div style="display: inline-flex;" id="qrcode"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Load jQuery and QR Code Generator -->
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/qrcodejs/1.0.0/qrcode.min.js"></script>

<script>
$(document).ready(function() {
    // Generate QR Code with student_ID
    let studentID = "{{ current_user.student_ID }}";
    if (studentID) {
        new QRCode(document.getElementById("qrcode"), {
            text: studentID,
            width: 150,
            height: 150
        });
    }

    // Open Edit Profile Modal
    $("#editProfileBtn").click(function() {
        Swal.fire({
            title: "Coming Soon",
            text: "Profile editing is not yet available.",
            icon: "info",
            confirmButtonColor: "#3085d6"
        });
    });

    // Open Change Password Modal
    $("#changePasswordBtn").click(function() {
        Swal.fire({
            title: "Coming Soon",
            text: "Password changing feature is not yet available.",
            icon: "info",
            confirmButtonColor: "#d33"
        });
    });
});
</script>
{% endblock %}
